{
    "extends": "@istanbuljs/nyc-config-typescript",
    "require": [
        "ts-node/register",
        "source-map-support/register"
    ],
    "check-coverage": true,
    "all": true,
    "include": [
        "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
        "src/_tests_/**/*.*"
    ],
    "reporter": [
        "html",
        "lcov",
        "text",
        "text-summary"
    ],
    "report-dir": "coverage",
    "statements": 0,
    "branches": 0,
    "functions": 0,
    "lines": 0,
    "per-file": true,
    "cache": false
}